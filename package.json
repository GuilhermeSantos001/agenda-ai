    "@nestjs/mercurius": "^12.0.4",
    "@nestjs/mongoose": "^10.0.0",
    "@nestjs/platform-express": "^10.0.0",
    "@nestjs/platform-fastify": "^10.0.5",
    "amqp-connection-manager": "^4.1.13",
    "amqplib": "^0.10.3",
    "bull": "^4.10.4",
    "class-transformer": "^0.5.1",
